<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:translateShaderPacks.ViewModels"
        x:Class="translateShaderPacks.Views.SettingsWindow"
        x:DataType="vm:SettingsWindowViewModel"
        Title="高级设置" Width="400" Height="450"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="AI 接口配置" FontWeight="Bold" />
        <TextBox VerticalContentAlignment="Center" Text="{Binding Config.ApiKey}" Watermark="API Key"
                 PasswordChar="*" />
        <TextBox VerticalContentAlignment="Center"
                 Text="{Binding Config.BaseUrl}" Watermark="API 地址 (如 https://api.deepseek.com)" />
        <TextBox VerticalContentAlignment="Center" Text="{Binding Config.ModelName}"
                 Watermark="模型名称 (如 deepseek-chat)" />

        <Separator Margin="0,5" />
        <TextBlock Text="路径配置" FontWeight="Bold" />
        <TextBox VerticalContentAlignment="Center" Text="{Binding Config.SourcePath}"
                 Watermark="读取路径 (en_US.lang)" />
        <TextBox VerticalContentAlignment="Center" Text="{Binding Config.TargetPath}"
                 Watermark="保存路径 (zh_CN.lang)" />

        <TextBlock Text="翻译配置" FontWeight="Bold" />
        <NumericUpDown VerticalContentAlignment="Center"
                       Text="{Binding Config.TranslateLines}"
                       Watermark="翻译行数 (如 1000)"
                       Minimum="1"
                       Maximum="999999"
                       Increment="1"
                       FormatString="0" />
        <Button Content="确定" HorizontalAlignment="Right" HorizontalContentAlignment="Center"
                Click="OnConfirmClick"
                Width="80" />
    </StackPanel>
</Window>